@model string

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Item</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="updatedExample">Update Item</label>
        <input type="text" id="updatedExample" name="updatedExample" class="form-control" value="@Model" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="/Example">Back to List</a>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}